<div class="container">
  <h3 class="text-center" style="padding-top: 30px;">Edit <%= @board.name %></h3>
  <%= simple_form_for(@board) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.submit "Update board", class: "btn btn-primary" %>
  <%= link_to "Delete board", board_path(@board), method: :delete, data: {Confirm: "delete board?"} %>
  <% end %>
</div>
