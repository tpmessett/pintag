<div class="page-background">
  <div class="board-header">
    <div class ="container head-text">
      <H3><%= @board.name %></H3>
      <p><%= @board.description %></p>
      <p>
          <%= link_to "Add Content", new_board_content_path(@board.id), class: "btn btn-primary" %>
          <%= link_to 'Edit Board', edit_board_path(@board), class: "btn btn-outline-primary" %>
        </p>
    </div>
  </div>

  <div class="container board-list">
    <div class="row">
      <% @contents.each do |content| %>
      <div class="col-sm-4">
        <div class="content-card card">
          <div class="board-image">
            <div class="delete">
            <a>x</a>
          </div>
            <div class="circle-overlay">
              <% if content.link? %>
                <i class="fas fa-link"></i>
              <% else %>
                <i class="fas fa-info"></i>
              <% end %>
            </div>
          </div>
        <div class="card-body">
          <h5 class="card-title"><%=content.name %></h5>
          <p classs="card-text"><%=content.description %></p>
          <% if content.file_upload.attachment != nil %>
            <%= link_to "Show content", content.file_upload.service_url, target: :_blank, class: "btn btn-outline-primary"%>
          <% else %>
            <%= link_to "Show content", content.link, target: :_blank, class: "btn btn-outline-primary" %>
          <% end %>
          <a><%= link_to "Edit content", edit_content_path(content) %></a>
        </div>
        <div class="card-footer">
            <% content.tags.each do |tag| %>
            <div class="btn btn-tag">
              <span class="tag-display"> <%= link_to board_path(search: tag.name, searchtype: "tag") do %> <%= tag.name %> <%end%></span>
            </div>
            <% end %>
            <span class="tag-display" style="margin-left: 10px;"> <%= link_to "Add tag", new_tag_path %></span>
          </div>
        </div>
      </div>
        <% end %>
      </div>
    </div>
  </div>

