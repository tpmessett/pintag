<div class="navbar navbar-expand-sm fixed-top navbar-light navbar-lewagon-grey">
      <div class="container">
        <%= link_to "/", class: "navbar-brand" do %>
          <span class="circle-icon-nav"><i class="fas fa-map-pin"></i></span>
        <% end %>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <% if current_user %>
        <div id="search-controls" class="ml-auto">
          <form action="<%= board_path current_user.boards.first || Board.first %>" class="search-form form-inline container ">
            <input class="text-input form-control" type="text" placeholder="Find something?" name="search" id="search" />
            <select id="searchtype" name="searchtype" type="text" class="custom-select form-control">
              <option  selected value="all">Seach All</option>
              <option value="tag">Search By Tag</option>
              <% if @board != nil %>
                <option value="current-board">Current Board Only</option>
              <% end %>
          </select>
          <button id="search-button" type="submit"><i class="fas fa-search"></i></button>
          </form>
        </div>
          <ul id="ul-nav" class="navbar-nav">
              <li class="nav-item">
                <%= link_to "View boards", boards_path, class: "nav-link" %>
              </li>
              <li class="nav-item dropdown">
                  <%= image_tag "https://res.cloudinary.com/dsp7ysucn/image/upload/v1614269335/hdswoqzf2hivzgu7todb.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                  <%= link_to "logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
                </div>
              </li>
        <% else %>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul id="nav-dropdowns" class="navbar-nav">
              <li class="nav-item">
                <%= link_to "Sign Up", new_user_registration_path(reg: "true"), class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to new_user_registration_path, class: "navbar-brand" do %>
                  <span class="circle-icon-nav"><i class="fas fa-sign-in-alt"></i></span>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>

